# Environment variables for Passbolt Docker Compose

# MariaDB configuration
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=passbolt_db
MYSQL_USER=passbolt_user
MYSQL_PASSWORD=your_password

# Passbolt configuration
APP_FULL_BASE_URL=https://your-domain.com
DATASOURCES_DEFAULT_HOST=mariadb
DATASOURCES_DEFAULT_USERNAME=passbolt_user
DATASOURCES_DEFAULT_PASSWORD=your_password
DATASOURCES_DEFAULT_DATABASE=passbolt_db

# Email configuration
EMAIL_DEFAULT_FROM=your-email@example.com
EMAIL_TRANSPORT_DEFAULT_HOST=smtp.example.com
EMAIL_TRANSPORT_DEFAULT_PORT=587
EMAIL_TRANSPORT_DEFAULT_USERNAME=your_email_user
EMAIL_TRANSPORT_DEFAULT_PASSWORD=your_email_password